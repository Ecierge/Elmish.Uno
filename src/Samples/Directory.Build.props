<Project>
  <Import Project="..\Directory.Build.props"/>

  <PropertyGroup>
    <AssemblyName>Elmish.Uno.$(MSBuildProjectName.Replace(" ", "_"))</AssemblyName>
    <RootNamespace>Elmish.Uno.$(MSBuildProjectName.Replace(" ", "_"))</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <DotNetVersion>net8.0</DotNetVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>

    <!--
      Adding NoWarn to remove build warnings
      NU1507: Warning when there are multiple package sources when using CPM with no source mapping
      NETSDK1201: Warning that specifying RID won't create self containing app
      PRI257: Ignore default language (en) not being one of the included resources (eg en-us, en-uk)
    -->
    <NoWarn>$(NoWarn);NU1507;NETSDK1201;PRI257</NoWarn>

    <!-- Required for Hot Reload (See https://github.com/dotnet/sdk/issues/36666) -->
    <IncludeSourceRevisionInInformationalVersion Condition="'$(Configuration)'=='Debug'">false</IncludeSourceRevisionInInformationalVersion>

    <UnoFeatures>
      Configuration;
      Hosting;
      Localization;
      Logging;
      Lottie;
      Svg;
      Toolkit;
    </UnoFeatures>

  </PropertyGroup>

  <PropertyGroup>
    <WindowsSdkPackageVersion>10.0.26100.48</WindowsSdkPackageVersion>
    <UnoExtensionsVersion>5.1.2</UnoExtensionsVersion> <!-- https://www.nuget.org/packages/Uno.Extensions.Core -->
    <UnoLoggingVersion>1.7.0</UnoLoggingVersion> <!-- https://www.nuget.org/packages/Uno.Extensions.Logging.OSLog -->
    <UnoCoreLoggingSingletonVersion>4.1.1</UnoCoreLoggingSingletonVersion> <!-- https://www.nuget.org/packages/Uno.Core.Extensions.Logging -->
    <UnoResizetizerVersion>1.6.1</UnoResizetizerVersion> <!-- https://www.nuget.org/packages/Uno.Resizetizer -->
    <UnoToolkitVersion>6.3.5</UnoToolkitVersion> <!-- https://www.nuget.org/packages/Uno.Toolkit -->
    <UnoThemesVersion>5.3.1</UnoThemesVersion> <!-- https://www.nuget.org/packages/Uno.Themes -->
    <UnoUniversalImageLoaderVersion>1.9.37</UnoUniversalImageLoaderVersion> <!-- https://www.nuget.org/packages/Uno.UniversalImageLoader -->
    <UnoWasmBootstrapVersion>9.0.3</UnoWasmBootstrapVersion> <!-- https://www.nuget.org/packages/Uno.Wasm.Bootstrap -->
  </PropertyGroup>

</Project>
